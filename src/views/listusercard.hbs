<div class="d-grid  mx-auto p-1">
    <button class="btn btn-secondary" onclick="window.location.href='/admin'">
        Retorno
    </button>
</div>
<div class="overflow-auto container p-4 ">
   {{#each registros}}
    <div class="row">

        
        <div>
            <div class="col-md-3 m-2 ">
                <div class="card text-center">
                    <div class="card-body">
                        <a href="" target="_blank">
                            <h3 class="card-title">
                                {{nombre}} {{apellido}}
                            </h3>
                        </a>
                        <p class="m-2">Usuario: {{usuario}}</p>
                        <p>Tipo: {{tipo}}</p>
                        <p>Sub Tipo: {{subtipo}}</p>
                        <a href="/listauser/borrar/{{id}}" class="btn btn-danger">Borrar</a>
                        <a href="/listauser/editar/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
            {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p> No hay registros corre </p>
                    <a href="">Crea uno</a>
                </div>
            </div>
        </div>
        

    </div>
    {{/each}}
</div>