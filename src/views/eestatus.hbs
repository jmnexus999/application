<div class="contatainer p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header text-center">
                    <b>Menu edicion estatus Ticket</b>
                </div>
                <div class="card-body">

                    <form action="/eestatus/{{datos.id}}" method="POST">
                        <div class="mb-2">
                            <div class="form-group p-1">
                                <label id="ticket" name="ticket" for="">Ticket: {{datos.id}}</label>
                            </div>
                        </div>
                        <div class="mb-2">
                            <div class="form-group p-1">
                                <label id="estatus" name="estatus" for="">Ticket: {{datos.estatus}}</label>
                            </div>
                        </div>
                        <hr>
                        <div>
                            <label for="">Selecciona la opccion</label>
                        </div>

                        <div class="form-group p-2">
                            <select class="form-select" name="nestatus" id="nestatus">
                                <option value="OK">OK</option>
                                <option value="Revision">Revision</option>
                                <option value="Anulado">Anulado</option>
                            </select>
                        </div>
                        <div class="form-group p-1">
                            <textarea name="motivo" rows="2" id="motivo" class="form-control"
                                placeholder="Escribe el motivo"></textarea>
                        </div>
                        <div class="mb-2">
                            <div class="d-grid  mx-auto p-1">
                                <button class="btn btn-success">
                                    guardar
                                </button>
                            </div>
                        </div>

                    </form>
                    <div class="d-grid  mx-auto p-1">
                        <button class="btn btn-secondary" onclick="window.location.href='/consultaad'">
                            Retorno
                        </button>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>